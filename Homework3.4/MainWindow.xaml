<Window x:Class="Homework3._4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework3._4"
        mc:Ignorable="d"
        Title="Завдання №4" Height="450" Width="800">
    <Grid>
        <Button Content="Зберегти" HorizontalAlignment="Left" Margin="108,256,0,0" VerticalAlignment="Top" Click="Save_Click" Height="50" Width="100"/>
        <Button Content="Видалити" HorizontalAlignment="Left" Margin="251,256,0,0" VerticalAlignment="Top" Click="Delete_Click" Height="50" Width="100"/>
        <Button Content="Очистити поле" HorizontalAlignment="Left" Margin="400,256,0,0" VerticalAlignment="Top" Click="Clear_Click" Height="50" Width="100"/>
        <TextBox x:Name="InputBox"
         TextWrapping="Wrap"
         Text="Введіть текст"
         Margin="284,131,284,242"
         TextChanged="TextBox_TextChanged"
         Background="LightYellow"
         BorderBrush="Black"
         BorderThickness="2"/>

        <Button Content="Вивести вміст" HorizontalAlignment="Left" Margin="548,256,0,0" VerticalAlignment="Top" Click="Read_Click" Height="50" Width="100"/>
    </Grid>
</Window>
