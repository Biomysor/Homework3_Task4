<Window x:Class="Homework6Task5Reflector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reflector" Height="600" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Відкрити" Click="OpenMenuItem_Click"/>
                <MenuItem Header="Вихід" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Панель з чекбоксами -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <CheckBox x:Name="chkMethods" Content="Методи" IsChecked="True" Margin="5"/>
            <CheckBox x:Name="chkProperties" Content="Властивості" Margin="5"/>
            <CheckBox x:Name="chkFields" Content="Поля" Margin="5"/>
            <CheckBox x:Name="chkEvents" Content="Події" Margin="5"/>
        </StackPanel>

        <!-- Вікно для результатів -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="textBlock" AcceptsReturn="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     IsReadOnly="True"/>
        </ScrollViewer>
    </DockPanel>
</Window>
